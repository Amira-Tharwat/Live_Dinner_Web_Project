@model IEnumerable<Blog>
@{
    Layout = "_DashBoard";
}

<div class="dash-content">
    <div class="overview">
        <div class="title">
           @*  <i class="uil uil-tachometer-fast-alt"></i> *@
            <span class="text">All Chefs</span>
        </div>
    </div>
    <div>
        <table class="table table-striped">
            <thead>
                <tr>
                    <td class="table-light">Id</td>
                    <td class="table-light">Title</td>
                    <td class="table-light">Description</td>
                    <td class="table-light">Author</td>
                    <td class="table-light">Image</td>
                    <td class="table-light">operation</td>


                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Title</td>
                        <td>@item.Description</td>
                        <td>@item.Author</td>
                        <td><img src="~/MyImages/@item.ImgPath" width="70px" class="img-thumbnail rounded-circle" /></td>
                        <td>

                            <a class="btn " style="background-color:blue ; color:white" asp-action="ViewComments" asp-route-id="@item.Id" role="button">
                                <span class="material-symbols-outlined">
                                    View Comments
                                </span>
                            </a>
                            <a class="btn btn-success" asp-action="EditBlog" asp-route-id="@item.Id" role="button">
                                <span class="material-symbols-outlined">
                                    Edit
                                </span>
                            </a>
                            <a class="btn btn-danger " asp-action="DeleteBlog" asp-route-id="@item.Id" role="button">
                                <span class="material-symbols-outlined">
                                    Delete
                                </span>
                            </a>
                        </td>

                    </tr>
                }

            </tbody>
        </table>

    </div>




</div>