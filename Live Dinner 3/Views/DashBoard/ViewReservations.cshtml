@model IEnumerable<Reservation>
@{
    Layout = "_DashBoard";
}

<div class="dash-content">
    <div class="overview">
        <div class="title">
           
            <span class="text">All Reservations</span>
        </div>
    </div>
    <div>
        <table class="table table-striped">
            <thead>
                <tr>
                    <td class="table-light">Id</td>
                    <td class="table-light">Name</td>
                    <td class="table-light">Email</td>
                    <td class="table-light">Number</td>
                    <td class="table-light">NumOfPersons</td>
                    <td class="table-light">Date</td>
                    <td class="table-light">Time</td>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>@item.Email</td>
                        <td>@item.Number</td>
                        <td>@item.NumOfPersons</td>
                        <td>@item.Date</td>
                        <td>@item.Time</td>
                    </tr>
                }

            </tbody>
        </table>

    </div>




</div>