
@model Live_Dinner_3.ViewModel.StuffViewModel
<!-- Start All Pages -->
<div class="all-page-title page-breadcrumb">
    <div class="container text-center">
        <div class="row">
            <div class="col-lg-12">
                <h1>Stuff</h1>
            </div>
        </div>
    </div>
</div>
<!-- End All Pages -->
<!-- Start Stuff -->
<div class="stuff-box">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="heading-title text-center">
                    <h2>Stuff</h2>
					<p>If you're not the one cooking, stay out of the way and compliment the chef.</p>
                </div>
            </div>
        </div>
        <div class="row">
          @foreach (var chef in Model.Chefs){
            <div class="col-md-4 col-sm-6">
                
                <div class="our-team">
                    <div class="pic">

                        <img src="~/MyImages/@chef.ImgPath">
                        <ul class="social">
                            <h2 style="color:black" > @chef.Email</h2>
                           
                        </ul>
                    </div>
                    <div class="team-content">
                        <h3 class="title" >@chef.Name</h3>
                        
                    </div>
                </div>
                
            </div>
            }
            
        </div>
		<div class="row mt-5">
			<div class="col text-center">
				<div class="block-27">
					<ul class="pagination">
						@if (Model.CurrentPage != 1)
						{
							<li class="page-item">
								<a style="color:black" class="page-link" asp-controller="Pages" asp-action="Stuff" asp-route-Page="@(Model.CurrentPage-1)">&lt;</a>
							</li>
						}
						else
						{
							<li class="page-item disabled">
								<a style="color:black" class="page-link" asp-controller="Pages" asp-action="Stuff" asp-route-Page="@(Model.CurrentPage)">&lt;</a>
							</li>
						}

						@for (int i = 1; i <= Model.PageCount; i++)
						{
							if (i == Model.CurrentPage)
							{
								<li class="page-item  active " >
									<span style="color:black ; background-color:#d65106" class="page-link">@i</span>
								</li>
							}
							else
							{
								<li class="page-item">
									<a style="color:black" class="page-link" asp-controller="Pages" asp-action="Stuff" asp-route-Page="@i">@i</a>
								</li>
							}
						}

						@if (Model.CurrentPage != Model.PageCount)
						{
							<li class="page-item">
								<a style="color:black" class="page-link" asp-controller="Pages" asp-action="Stuff" asp-route-Page="@(Model.CurrentPage+1)">&gt;</a>
							</li>
						}
						else
						{
							<li class="page-item disabled">
								<a style="color:black" class="page-link" asp-controller="Pages" asp-action="Stuff" asp-route-Page="@(Model.CurrentPage)">&gt;</a>
							</li>
						}
					</ul>
				</div>
			</div>
		</div>
    </div>
</div>
<!-- End Stuff -->
