@model Live_Dinner_3.ViewModel.MenuViewModel

<!-- Start All Pages -->
<div class="all-page-title page-breadcrumb">
	<div class="container text-center">
		<div class="row">
			<div class="col-lg-12">
				<h1>Gallery</h1>
			</div>
		</div>
	</div>
</div>
<!-- End All Pages -->
<!-- Start Gallery -->
<div class="gallery-box">
	<div class="container">
		<div class="row">
			<div class="col-lg-12">
				<div class="heading-title text-center">
					<h2>Gallery</h2>
					<p>Elevate your dining experience with our signature dishes</p>
				</div>
			</div>
		</div>
		<div class="tz-gallery">
			<div class="row">
				@foreach(var meal in Model.Meals)
				{
					<div class="col-sm-12 col-md-4 col-lg-4">
						<a class="lightbox" href="~/MyImages/@meal.ImgPath">
						<img class="img-fluid" src="~/MyImages/@meal.ImgPath" alt="Gallery Images">
					</a>
				</div>
				}

				
				
			</div>
			<div class="row mt-5">
				<div class="col text-center">
					<div class="block-27">
						<ul class="pagination">
							@if (Model.CurrentPage != 1)
							{
								<li class="page-item">
									<a style="color:black" class="page-link" asp-controller="Pages" asp-action="Gallery" asp-route-Page="@(Model.CurrentPage-1)">&lt;</a>
								</li>
							}
							else
							{
								<li class="page-item disabled">
									<a style="color:black" class="page-link" asp-controller="Pages" asp-action="Gallery" asp-route-Page="@(Model.CurrentPage)">&lt;</a>
								</li>
							}

							@for (int i = 1; i <= Model.PageCount; i++)
							{
								if (i == Model.CurrentPage)
								{
									<li class="page-item active">
										<span style="color:black ; background-color:#d65106" class="page-link">@i</span>
									</li>
								}
								else
								{
									<li class="page-item">
										<a style="color:black" class="page-link" asp-controller="Pages" asp-action="Gallery" asp-route-Page="@i">@i</a>
									</li>
								}
							}

							@if (Model.CurrentPage != Model.PageCount)
							{
								<li class="page-item">
									<a style="color:black" class="page-link" asp-controller="Pages" asp-action="Gallery" asp-route-Page="@(Model.CurrentPage+1)">&gt;</a>
								</li>
							}
							else
							{
								<li class="page-item disabled">
									<a style="color:black" class="page-link" asp-controller="Pages" asp-action="Gallery" asp-route-Page="@(Model.CurrentPage)">&gt;</a>
								</li>
							}
						</ul>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
<!-- End Gallery -->