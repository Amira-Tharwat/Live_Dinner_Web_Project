@model IEnumerable<Blog>
<!-- Start All Pages -->
<div class="all-page-title page-breadcrumb">
	<div class="container text-center">
		<div class="row">
			<div class="col-lg-12">
				<h1>Blogs</h1>
			</div>
		</div>
	</div>
</div>
<!-- End All Pages -->
<!-- Start blog -->
<div class="blog-box">
	<div class="container">
		<div class="row">
			<div class="col-lg-12">
				<div class="heading-title text-center">
					<h2>Blogs</h2>
					
				</div>
			</div>
		</div>
		<div class="row">
			@foreach(var blog in Model)
			{
				<div class="col-lg-4 col-md-6 col-12">
				<div class="blog-box-inner">
					<div class="blog-img-box">
						<img class="img-fluid" src="~/MyImages/@blog.ImgPath" alt="">
					</div>
					<div class="blog-detail">
						<h4>@blog.Title</h4>
						<ul>
							<li><span>Post by : @blog.Author</span></li>
							<li>|</li>
							
						</ul>
						<p>@blog.Description </p>
						
							<a asp-action="BlogDetails" asp-route-id="@blog.Id" class="btn btn-lg btn-circle btn-outline-new-white">Read More</a>
					</div>
				</div>
			</div>
			}
			
			
		</div>
	</div>
</div>
<!-- End blog -->